<ResourceDictionary x:Class="RowsSharp.View.Hyperlink"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Hyperlink">
        <Setter Property="Foreground" Value="{StaticResource Hyperlink.Foreground}"/>
        <EventSetter Event="Click" Handler="Hyperlink_Clicked"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="{StaticResource Hyperlink.Hover.Foreground}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>